<h1>Tickets</h1>

<%= current_user.nome %>


<%= link_to 'Criar novo ticket', new_ticket_path, class: "btn btn-primary" %>

<table>
  <thead>
    <tr>
      <th>Título</th>
      <th>Status</th>
      <th>Usuário</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.titulo %></td>
        <td><%= ticket.status %></td>
        <td><%= ticket.user.nome %></td>
        <td><%= link_to 'Mostrar', ticket %></td>
        <td><%= link_to 'Editar', edit_ticket_path(ticket) %></td>
        <td><%= link_to "Ver", ticket_path(ticket), class: "btn btn-info" %>
        <td><%= button_to 'Excluir', ticket, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
