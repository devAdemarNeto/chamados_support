<h1>Criar Ticket</h1>

<%= form_with(model: @ticket, local: true) do |form| %>
  <% if @ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ticket.errors.count, "erro") %> proibiu este ticket de ser salvo:</h2>
      <ul>
        <% @ticket.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :titulo %>
    <%= form.text_field :titulo %>
  </div>

  <div>
    <%= form.label :descricao %>
    <%= form.text_area :descricao %>
  </div>

  <div>
    <%= form.label :status %>
    <%= form.text_field :status %>
  </div>

  <div>
    <%= form.label :user_id, 'Usuário' %>
    <%= form.collection_select :user_id, User.all, :id, :nome, prompt: "Selecione o usuário" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
