<div class="bg-white shadow rounded-lg p-6 mb-6">
  <h1 class="text-2xl font-bold text-gray-800 mb-6">Novo Chamado</h1>

  <%= form_with(model: @ticket, local: true) do |form| %>
    <% if @ticket.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-700 p-4 rounded mb-6 border border-red-200">
        <h2 class="font-semibold text-lg mb-2"><%= pluralize(@ticket.errors.count, "erro") %> proibiu este chamado de ser salvo:</h2>
        <ul class="list-disc pl-5">
          <% @ticket.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :titulo, class: "block text-gray-700 font-medium mb-2" %>
      <%= form.text_field :titulo, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <div class="mb-6">
      <%= form.label :descrição, class: "block text-gray-700 font-medium mb-2" %>
      <%= form.text_area :descricao, rows: 5, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <%# Adicionando o botão de submit de forma explícita e com estilo muito visível %>
    <div class="flex flex-col sm:flex-row items-center justify-between mt-6 space-y-4 sm:space-y-0">
      <button type="submit" class="w-full sm:w-auto bg-blue-600 hover:bg-blue-700 text-white text-lg font-bold py-3 px-8 rounded shadow-lg">
        Criar Chamado
      </button>
      
      <%= link_to "Cancelar", tickets_path, class: "w-full sm:w-auto text-center bg-gray-300 hover:bg-gray-400 text-gray-800 font-medium py-2 px-6 rounded" %>
    </div>
  <% end %>
</div>