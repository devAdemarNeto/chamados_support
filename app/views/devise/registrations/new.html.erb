<div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-8 my-8">
  <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Criar Conta</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :nome, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :nome, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>  
    </div>
    
    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mb-4">
      <div class="flex items-center justify-between">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <% if @minimum_password_length %>
          <span class="text-xs text-gray-500">(<%= @minimum_password_length %> caracteres m√≠nimos)</span>
        <% end %>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full border border-gray-300 rounded-md px-3 py-2 mt-1 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mb-6">
      <%= f.submit "Cadastrar", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition duration-200" %>
    </div>
  <% end %>

  <div class="text-center text-sm">
    <%= render "devise/shared/links" %>
  </div>
</div>